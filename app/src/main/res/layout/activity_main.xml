<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.app_21022018.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:weightSum="1">

            <TextView
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtCorba"
                android:layout_weight="0.04"
                android:text="Çorba" />

            <EditText
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtCorbaAdet"
                android:hint="Çorba Kase Adedi?" />

            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:text="Birim Fiyat:4.5 TL"
                android:id="@+id/textView"
                android:layout_weight="0.14" />

            <TextView
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtCorbaToplam"
                android:layout_weight="0.11" />

            <TextView
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:text="Ana Yemek"
                android:id="@+id/textView2"
                android:layout_weight="0.07" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtYemekAdet"
                android:layout_weight="0.04"
                android:hint="Yemek Tabak Adedi?" />

            <TextView
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:text="Birim Fiyat: 7.4 TL"
                android:id="@+id/textView4"
                android:layout_weight="0.08" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtYemekToplam"
                android:layout_weight="0.10" />

            <TextView
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:text="Tatlı"
                android:id="@+id/textView3"
                android:layout_weight="0.04" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTatlıAdet"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.04"
                android:hint="Tatlı Servis Adedi?" />

            <TextView
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:text="Birim Fiyat: 5.3 TL"
                android:id="@+id/textView5"
                android:layout_weight="0.17" />

            <TextView
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtTatliToplam"
                android:layout_weight="0.04" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahşiş Hesapla"
                android:id="@+id/btnBahsisHesapla"
                android:layout_weight="0.04" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtToplamYemek"
                android:layout_weight="0.04" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtToplamBahsis"
                android:layout_weight="0.04" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtToplamHesap"
                android:layout_weight="0.04" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
